<script>
    require([
        "jquery",
        "domReady!"
    ], function($){
        var rid = '#recaptcha-append-to';
        $('.comment-form-blog-recaptcha, .reply-form-blog-recaptcha').click(function() {
            if (!$(this).find(rid).length) {
                $(rid).appendTo($(this));
            }
        });
    });
</script>
